<h1>Transactions</h1>

<% @categories.each do |category| %>
  <div>
    <h3><%= category.name %></h3>
    <% total_amount = category.category_transactions.sum { |ct| ct.transaction.amount } %>
    <p>Total Amount: <%= total_amount %></p>
    <%= link_to category_path(category) do %>
      <div style="width: 50px; height: 50px; overflow: hidden;">
        <%= image_tag category.icon, alt: category.name, style: "width: 100%; height: auto; display: block;" %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to "Add a New Category", new_category_path %>
<%= link_to "Sign Out", log_out_path, method: :delete, class: "btn btn-primary" %>
