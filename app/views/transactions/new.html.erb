<h1>New Transaction</h1>

<%= form_with model: @transaction, url: category_transactions_path(@category) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, required: true %>
  </div>

  <div>
    <%= form.label :category_ids %>
    <%= form.collection_select :category_ids, Category.all, :id, :name, { prompt: 'Select Category' }, multiple: true, required: true %>
  </div>

  <%= form.submit "Save" %>
<% end %>

<%= link_to "Back", category_path(@category) %>
